<title>Spacesurf</title>

<style>
	.card-title{
		font-size: 10px;
	}
	.card-content{
		font-size: 20px;
	}
.black{
  background-color: black;
  color: white;
}
    .w3-bg{
        background-color: #1d1d1d;
        border: 0.6px solid rgb(75, 75, 75);
        border-radius: 10px;
    }
</style>
<body class="black">
<div class="row black">
    <div class="col s12 m8">
        <h3>{{story.title}}
            <small>{{{editIcon story.user user story._id false}}}</small>
        </h3>
        <div class="card story black">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{story.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4 black w3-bg">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{story.user.displayName}}</span>
                <img src="{{story.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{story.user._id}}">More From {{story.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>
</body>